package com.WebdriverAssignments;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.chrome.ChromeDriver;

public class A10CheckboxButtonDemo {

	public static void main(String[] args) {
		
		
WebDriver driver=new ChromeDriver();
		
		driver.manage().window().maximize();
		
		driver.get("https://echoecho.com/htmlforms09.htm");
		
		
		WebElement chkmilkbtn =driver.findElement(By.xpath("/html/body/div[2]/div[2]/form/div/div[9]/div/label[2]/input"));

		WebElement chkbutterbtn =driver.findElement(By.xpath("/html/body/div[2]/div[2]/form/div/div[9]/div/label[2]/input"));
		
		WebElement chkcheesbtn =driver.findElement(By.xpath("/html/body/div[2]/div[2]/form/div/div[9]/div/label[2]/input"));
		
		System.out.println("Before : ");
		System.out.println("Selected : "+frdbtn.isSelected());
		System.out.println("Enabled : "+frdbtn.isEnabled());
		System.out.println("Displayed : "+frdbtn.isDisplayed());
		
		
		frdbtn.click();
		
		
		System.out.println("After : ");
		System.out.println("Selected : "+frdbtn.isSelected());
		System.out.println("Enabled : "+frdbtn.isEnabled());
		System.out.println("Displayed : "+frdbtn.isDisplayed());


	}

}
